<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DangerButton" BasedOn="{StaticResource MaterialDesignRaisedDarkButton}" TargetType="Button">
        <Setter Property="Background" Value="OrangeRed" />
        <Setter Property="BorderBrush" Value="OrangeRed" />
        <Setter Property="Foreground" Value="WhiteSmoke" />
    </Style>

    <Style x:Key="SecondaryButton" BasedOn="{StaticResource MaterialDesignRaisedDarkButton}" TargetType="Button">
        <Setter Property="Background" Value="Green" />
        <Setter Property="BorderBrush" Value="Green" />
        <Setter Property="Foreground" Value="WhiteSmoke" />
    </Style>

    <Style x:Key="SpecialButton" BasedOn="{StaticResource MaterialDesignRaisedDarkButton}" TargetType="Button">
        <Setter Property="Background" Value="#05386B" />
        <Setter Property="BorderBrush" Value="#05386B" />
        <Setter Property="Foreground" Value="WhiteSmoke" />
    </Style>

    <Style x:Key="PrimaryButton" BasedOn="{StaticResource MaterialDesignRaisedDarkButton}" TargetType="Button">
        <Setter Property="Background" Value="#0d6efd" />
        <Setter Property="BorderBrush" Value="#0d6efd" />
        <Setter Property="Foreground" Value="WhiteSmoke" />
    </Style>
</ResourceDictionary>
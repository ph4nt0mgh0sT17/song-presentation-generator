<Window x:Class="SongTheoryApplication.Views.Windows.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SongTheoryApplication.Views.Windows"
        xmlns:fa5="http://schemas.fontawesome.com/icons/"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="DialogWindow" Height="400" Width="400" ResizeMode="NoResize" WindowStyle="None" Background="Transparent"
        SizeToContent="WidthAndHeight"
        AllowsTransparency="True"
        d:DataContext="{d:DesignInstance Type=local:DialogWindow, IsDesignTimeCreatable=True}">
    <Grid>
        <Border BorderBrush="Black" Background="{StaticResource DarkBlue}" CornerRadius="10" BorderThickness="1">
            <StackPanel Margin="30" Orientation="Vertical" >
                <Grid>
                    <fa:ImageAwesome Icon="CheckCircle" Width="30" Foreground="Green"
                                      Visibility="{Binding Path=SuccessIconVisibility}" />
                    <fa:ImageAwesome Icon="InfoCircle" Width="30" Foreground="SkyBlue"
                                      Visibility="{Binding Path=InformationIconVisibility}" />
                </Grid>
                <TextBlock HorizontalAlignment="Center" 
                           Foreground="{StaticResource PureWhite}" 
                           FontSize="30" 
                           TextWrapping="Wrap" 
                           TextAlignment="Center"
                           FontFamily="{StaticResource OpenSansRegular}" 
                           Text="{Binding Path=TitleText}">
                </TextBlock>
                <TextBlock HorizontalAlignment="Center" 
                           Foreground="{StaticResource PureWhite}" 
                           FontFamily="{StaticResource OpenSansRegular}" 
                           TextAlignment="Center" 
                           TextWrapping="Wrap" 
                           FontSize="20"
                           Margin="0 20 0 0" 
                           Text="{Binding Path=DescriptionText}">
                </TextBlock>

                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                Visibility="{Binding Path=OkButtonLayoutVisibility}"
                                Margin="0 20 0 0">
                        <Button Command="{Binding Path=OkButtonCommand}" FontWeight="Bold" FontSize="15" FontFamily="{StaticResource OpenSansRegular}" Foreground="White" Padding="10" Background="Orange"> OK</Button>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                Visibility="{Binding Path=AcceptCancelButtonsLayoutVisiblity}"
                                Margin="0 20 0 0">
                        <Button Command="{Binding Path=AcceptButtonCommand}" 
                                HorizontalContentAlignment="Center" 
                                VerticalContentAlignment="Center">Souhlasím</Button>
                        <Button Command="{Binding Path=CancelButtonCommand}"
                                HorizontalContentAlignment="Center" 
                                VerticalContentAlignment="Center"
                                Margin="20 0 0 0" >Nesouhlasím</Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
<Window x:Class="SongTheoryApplication.Views.Windows.CreateSongWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SongTheoryApplication.Views.Windows"
        xmlns:vm2="clr-namespace:SongTheoryApplication.ViewModels.Windows"
        xmlns:controls="clr-namespace:SongTheoryApplication.Views.Controls"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance vm2:CreateSongWindowViewModel}"
        Title="Vytvoření písničky"
        Height="{Binding Path=Height, Mode=TwoWay}" Width="{Binding Path=Width, Mode=TwoWay}"
        MinWidth="{Binding Path=MinWidth, Mode=OneWay}" MinHeight="{Binding Path=MinHeight, Mode=OneWay}"
        Left="{Binding Path=LeftWindow, Mode=OneWay}" Top="{Binding Path=TopWindow, Mode=OneWay}"
        x:Name="CreateSong">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="LightGray" BorderThickness="1" BorderBrush="Black">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                       Text="{Binding Path=CreateSongWindowTitleText}"
                       FontSize="25">
            </TextBlock>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Grid.Row="0" Margin="10">

                <StackPanel Margin="10">
                    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="5">
                        <StackPanel Margin="10">
                            <Label>Název písničky</Label>
                            <TextBox Text="{Binding Path=SongTitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="0" Margin="10">
                <StackPanel Margin="10">
                    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="5">
                        <StackPanel Margin="10">
                            <Label>Interpret písničky</Label>
                            <TextBox
                                Text="{Binding Path=SongInterpret, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            </TextBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="1" Margin="10">
                <StackPanel Margin="10">
                    <Border BorderThickness="1" BorderBrush="Black" CornerRadius="5">
                        <StackPanel Margin="10">
                            <Label>Text písničky</Label>
                            <TextBox Text="{Binding Path=SongText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Height="100">
                            </TextBox>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="2" Margin="10">
                <Button Width="100" Height="50"
                        IsEnabled="{Binding Path=CanCreateSong}"
                        Command="{Binding Path=CreateSongCommand}">
                    Uložit
                </Button>
            </Grid>
        </Grid>

        <controls:FooterControl Grid.Row="2" FooterWidth="{Binding ElementName=CreateSong, Path=Width, Mode=OneWay}"
                                FooterVersion="1.00"
                                ApplicationAuthor="David Miko">
        </controls:FooterControl>
    </Grid>
</Window>